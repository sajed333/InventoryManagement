@model DataLayer.Models.LogIn

@{
    ViewBag.Title = "LogIn";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style type="text/css">
        body {
            font-family: Arial;
            font-size: 10pt;
        }

        table {
            border: 1px solid #ccc;
            border-collapse: collapse;
        }

            table th {
                background-color: #F7F7F7;
                color: #333;
                font-weight: bold;
            }

            table th, table td {
                padding: 5px;
                border: 1px solid #ccc;
            }

        .error {
            color: red;
        }
        .center {
            margin-left: auto;
            margin-right: auto;
        }
        .required:after {
            content: " *";
            color: red;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("LogIn", "LogIn", FormMethod.Post))
    {
    <div style="padding-top:2em">
        <table border="0" cellpadding="5" cellspacing="5" class="center" >
            <tr>
                <th colspan="3">
                    Login
                </th>
            </tr>
            <tr>
                <td>
                    <lable class="required">Email</lable>
                </td>
                <td>
                    @Html.TextBoxFor(m => m.Email, new { @class = "astric" })
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error" })
                </td>
            </tr>
            <tr>
                <td>
                    <lable class="required">Password</lable>
</td>
                <td>
                    @Html.PasswordFor(m => m.Password,new { @class="password"})
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error"  })
                </td>
            </tr>

            <tr>
                <td></td>
                <td>
                    <input type="submit" value="LogIn" />
                </td>
                <td></td>
            </tr>
        </table>
    </div>
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @if (@ViewBag.Message != null)
    {
        <script type="text/javascript">
            $(function () {
                alert("@ViewBag.Message")
            });
        </script>
    }
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
